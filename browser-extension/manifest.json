{
  "manifest_version": 2,
  "name": "KotLink Browser Extension",
  "description": "To activate: type 'go' followed by a space, then enter the alias to resolve.",
  "homepage_url": "http://kotlink.org",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "omnibox": {
    "keyword": "go"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ]
}
